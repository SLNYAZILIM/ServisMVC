@model IEnumerable<MVCServis.CaferServis.TBL_DERSPROG>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <input id="Text1" name="Text" type="text" placeholder="Takip No" class="form-control" />
        <div>
            <input type="submit" value="Ara" class="btn btn-success" />
        </div>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
               
                <th>
                    @Html.DisplayNameFor(model => model.BASLIK)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ALTYAZI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GUN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AY)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YIL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RESIM)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.BASLIK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ALTYAZI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GUN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AY)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YIL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RESIM)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        </table>
    </div>
}
