@model MVCServis.Areas.SYADMIN.Models.UserG

@{
    ViewBag.Title = "UserGiris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserGiris</h2>
@if (Session["userbilgi"] != null)
{
    <div>Giriş başarılı.</div>
}
else
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true,"Bir hata var kontrol et!!!")
        @Html.ValidationMessage("alarm")
        <div class="form-horizontal">
            <h4>UserG</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.sifre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.sifre, new { htmlAttributes = new { @class = "form-control", @type = "Password" } })
                    @Html.ValidationMessageFor(model => model.sifre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.hatirla, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.hatirla)
                        @Html.ValidationMessageFor(model => model.hatirla, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="GİRİŞ" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}

<div>
    @Html.ActionLink("Back to List", "Index")
    <br />
    @Html.ActionLink("Kayıt Ol", "UserKayit")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
